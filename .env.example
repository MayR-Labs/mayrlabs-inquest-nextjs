# ==============================================
# Service Configuration
# ==============================================

# Database Provider Selection
# Options: mongodb | supabase | neon | firebase
NEXT_PUBLIC_DB_PROVIDER=mongodb

# AI Provider Selection
# Options: gemini | openai
NEXT_PUBLIC_AI_PROVIDER=gemini

# Auth Provider Selection
# Options: firebase | supabase
NEXT_PUBLIC_AUTH_PROVIDER=firebase


# ==============================================
# Database Services
# ==============================================

# MongoDB Configuration (Required if NEXT_PUBLIC_DB_PROVIDER=mongodb)
# Format: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/<dbname>
MONGODB_URI=
MONGODB_DBNAME=

# Supabase Database Configuration (Required if NEXT_PUBLIC_DB_PROVIDER=supabase)
SUPABASE_URL=
SUPABASE_KEY=

# ==============================================
# AI Services
# ==============================================

# Gemini Configuration (Required if NEXT_PUBLIC_AI_PROVIDER=gemini)
GEMINI_API_KEY=

# OpenAI Configuration (Required if NEXT_PUBLIC_AI_PROVIDER=openai)
OPENAI_API_KEY=

# ==============================================
# Auth Services
# ==============================================

# Firebase Auth Configuration (Required if NEXT_PUBLIC_AUTH_PROVIDER=firebase)
# Get these from your Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Supabase Auth Configuration (Required if NEXT_PUBLIC_AUTH_PROVIDER=supabase)
# Reuses SUPABASE_URL and SUPABASE_KEY defined above
